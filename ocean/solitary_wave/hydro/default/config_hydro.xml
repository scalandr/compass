<?xml version="1.0"?>
<config case="hydro">
	<add_link source="../../../init/default/initial_state/initial_state.nc" dest="init.nc"/>
	<add_link source="../../../init/default/base_mesh/graph.info" dest="graph.info"/>

	<add_executable source="model" dest="ocean_model"/>

	<namelist name="namelist.ocean" mode="forward">
		<template file="templates/template_forward_soliton.xml" path_base="script_configuration_dir"/>
		<option name="config_dt">'00:01:00'</option>
                <option name="config_enable_nonhydrostatic_mode">.false.</option>
                <option name="config_use_cvmix">.false.</option>
                <option name="config_btr_dt">'0000_00:00:01'</option>
                <option name="config_use_vertMom_del2">.true.</option>
   	 	<option name="config_mom_del2">10.0</option>
    	 	<option name="config_vertMom_del2">10.0</option>
	</namelist>

	<streams name="streams.ocean" keep="immutable" mode="forward">
		<template file="templates/template_forward_soliton.xml" path_base="script_configuration_dir"/>
	</streams>

	<run_script name="run.py">
		<step executable="gpmetis">
		<argument flag="graph.info">16</argument>
		</step>
		<model_run procs="16" threads="1" namelist="namelist.ocean" streams="streams.ocean"/>
	</run_script>
</config>
